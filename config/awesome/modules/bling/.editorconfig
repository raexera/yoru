root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
trim_trailing_whitespace = true

[*.lua]
indent_size = 4
indent_style = space
max_line_length = 80

[*.yml]
indent_size = 2
indent_style = space

[*.{html,css}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false
